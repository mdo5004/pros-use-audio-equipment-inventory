<h2>My Profile</h2>
<p><%= @user.name %></p>
<p><%= @user.title %></p>
<p><%= @user.location %></p>
<%= link_to "Edit Profile...", edit_user_path(@user) %>

<h2>My Rigs <small><%= link_to "New Rig...", new_user_rig_path(@user), {class:"btn btn-default", role:"button"} %></small></h2>
<% @user.rigs.each do |rig| %>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><%= rig.name %></h3>
    </div>
    <div class="panel-body">
        <%= link_to "Details", '#', {"data-id": rig.id, role: "button", class: "btn btn-default details-link"} %> <%= link_to "Edit", user_rig_path(current_user,rig), { role:"button", class: "btn btn-default"} %>
    </div>
</div>
<% end %>

<script id="list-template" type="text/x-handlebars-template">
    <ul class="list-group">
    {{#each item}}
        <li class="list-group-item">{{name}}</li>
    {{/each}}
    </ul>
</script>
<script id="test-template" type="text/x-handlebars-template">
    <h1>{{text}}</h1>
</script>

<h2>My Equipment</h2>
<% @user.my_equipment.each do |item| %>
<%= link_to item.name, item_path(item) %><br>
<% end %><br>
<%= link_to "New Item...", new_item_path %><br>
