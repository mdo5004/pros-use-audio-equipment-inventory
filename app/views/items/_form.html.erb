<%= render partial:"layouts/errors", locals: {record: item} %>
<%= form_for item do |f| %>
<%= f.hidden_field :rig_ids, value: rig_id %><br>
<%= f.label "Name*"%><br>
<%= f.text_field :name%><br>
<%= f.label "Manufacturer*" %><br>
<%= f.text_field :manufacturer%><br>
<%= f.label :classification%><br>
<%= f.text_field :classification%><br>
<%= f.label :make%><br>
<%= f.text_field :make%><br>
<%= f.label :model%><br>
<%= f.text_field :model%><br>
<%= f.label :year%><br>
<%= f.number_field :year%><br>
<%= f.label :link%><br>
<%= f.text_field :link%><br>
<%= f.label :rigs%><br>
<div class="input-group">
<%= f.collection_check_boxes :rig_ids, current_user.rigs, :id, :name,{checked: rig_id || rig_ids } %><br>
</div>
<%= f.submit%><br>
<% end %>
