<%= form_for rig do |f| %>

<% if rig.errors.any? %>
<div id="error_explanation">
    <h4><%= pluralize(rig.errors.count, "error") %> prohibited this task from being saved:</h4>

    <ul>
        <% rig.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= f.hidden_field :user_id %>

<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :venue %>
<%= f.text_field :venue %><br>
<%= f.label :use %>
<%= f.select :use, ["Production","Recording","Other"] %><br>
Equipment:<%= f.collection_check_boxes :item_ids, Item.all, :id, :name %>
<br>
<%= f.fields_for :items do |item_f| %>
<%= item_f.label "Or name a new item" %>
<%= item_f.text_field :name %>
<% end %>
<%= f.submit %>
<% end %>
