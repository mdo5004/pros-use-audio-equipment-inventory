<%= form_for rig do |f| %>

<%= render partial:"layouts/errors", locals: {record: rig} %>

<%= f.hidden_field :user_id %>

<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :venue %>
<%= f.text_field :venue %><br>
<%= f.label :use %>
<%= f.select :use, ["Production","Recording","Other"] %><br>
<% if !editing %>
    Equipment:<%= f.collection_check_boxes :item_ids, Item.all, :id, :name %>
    <br>
    <%= f.fields_for :items do |item_f| %>
    <br><%= item_f.label "Or name a new item" %>
    <%= item_f.text_field :name %>
    <%= item_f.label :manufacturer %>
    <%= item_f.text_field :manufacturer %>
    <% end %>
<% end %>
<%= f.submit %>
<% end %>
