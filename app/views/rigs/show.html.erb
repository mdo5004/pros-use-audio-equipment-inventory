<h1><%= @rig.name %></h1>

Venue: <%= @rig.venue %><br>
Use: <%= @rig.use %><br>

<h2>Equipment</h2>
<h4><%= @rig.item_count %> items:</h4>
<ul>
<% @rig.items.each do |item| %>
<li><%= link_to item.name, item_path(item) %> <%= link_to "(remove)", rig_item_path(@rig,item), method:"delete" %> </li>
<% end %>
<li><%= link_to "New Item...", new_rig_item_path(@rig) %></li>
</ul>